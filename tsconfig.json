{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "strict": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        // "tests/unit/*.ts",
        "tests/benchmark/*.ts"
    ],
    "exclude": ["node_modules"]
}
